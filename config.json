{
  "input": {
    "general": {
      "menu": {
        "type": "trigger",
        "name": "Show Menu",
        "description": "Toggle the main menu.",
        "input": {
          "type": "key_press",
          "keycode": "ESCKEY"
        }
      }
    },
    "view": {
      "rotate": {
        "type": "axis2d",
        "name": "Look Around",
        "description": "Rotate the current view.",
        "input": {
          "x": {
            "type": "mouse_axis",
            "axis": "x",
            "sensitivity": 0.4
          },
          "y": {
            "type": "mouse_axis",
            "axis": "y",
            "sensitivity": 0.4
          }
        }
      }
    }
  },
  "logging": {
    "version": 1,
    "loggers": {
      "root": {
        "level": "WARNING",
        "handlers": [
          "stdout",
          "console"
        ]
      },
      "alleycat": {
        "level": "INFO"
      }
    },
    "formatters": {
      "simple": {
        "format": "[%(levelname)s] %(name)s - %(message)s"
      }
    },
    "handlers": {
      "stdout": {
        "class": "logging.StreamHandler",
        "formatter": "simple",
        "stream": "ext://sys.stdout"
      },
      "console": {
        "class": "alleycat.log.ConsoleLogger",
        "formatter": "simple"
      }
    }
  }
}